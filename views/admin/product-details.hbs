<section>
   
    <div class="container">
    
         <table  id="tbl_exporttable_to_xls"  class="table table-striped table-hover mt-5 bg-white">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Product ID</th>
      <th scope="col">Product Name</th>
      <th scope="col">Price</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
       <th scope="col">Stock</th>
        <th scope="col">Offer</th>
         <th scope="col">Offer Price</th>
      <th>Image</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
     <td><b>{{inc @index}}</b></td>
      <td>{{this.ID}}</td>
      <td>{{this.name}}</td>
      <td>{{this.price}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
       <td>{{this.stock}}</td>
       <td>{{this.offer}}</td>
       <td>{{this.offerPrice}}</td>
      
      <td><img style="width:50px;height:50px" src="/product-images/{{this._id}}.jpg"></td>
      <td><a href="/admin/edit-product/{{this._id}}"><img src="/images/edit symbol.jpg" style="width:40px; height:40px" ></a></td>
      <td><a href="/admin/delete-product/{{this._id}}" onclick="return confirm('Are you sure you want to delete {{this.name}} ?')"><img src="/images/delete symbol.png" style="width:40px; height:40px" ></a></td>
    </tr>
   {{/each}}
  </tbody>
</table>
    </div>
</section>


 <script src="/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/plugins-init/datatables.init.js"></script>