

 
 
  <div class="heading">
  <h1>SALES<span>REPORT</span></h1>
</div>


<div class="mt-5">
        <ul class="nav nav-tabs" role="tablist" >
             &nbsp; &nbsp; 
            <li class="active" >
                <a href="#tab-table1" data-toggle="tab" class="btn btn-secondary">Date</a>
            </li>
            &nbsp; &nbsp; &nbsp;
            <li>
                <a href="#tab-table2" data-toggle="tab"  class="btn btn-secondary">Month</a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="tab-table1">
                <div class="date">
                    <form action="/admin/day-sales-report" method="post">
<div class="p-5">
<label for="start">Date :</label>

<input type="date" id="start" name="day"
       value="2022-01-01"
       min="2018-01-01" max="2026-12-31">

       <div>
<button  class="btn btn-sm btn-primary" type="submit">View Report</button>
</div>
</div>

 </form>
                </div>
               
                <table id="myTable1" class="table table-striped table-bordered bg-white" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                                                <th>No</th>
                                                <th>Product Name</th>
                                                <th>Date</th>
                                                <th>price</th>
                                                <th>quantity</th>
                                                <th>Total price</th>
                        </tr>
                    </thead>
                      <tbody>
   {{#each daySalesList }}
                                            <tr>
                                                <td><b>{{inc @index}}</b></td>
                                                <td>{{this.name}}</td>
                                                <td>{{this.date}}</td>
                                                {{#if this.offer}}
                                                <td>{{this.offerPrice}}</td>
                                                {{else}}
                                                <td>{{this.price}}</td>
                                                {{/if}}
                                                <td>{{this.quantity}}</td>
                                                <td>{{this.total}}</td>
                                               
                                               
                                            </tr>
                                            {{/each}}


                                              <tr>
                                                    {{#each countOrder }}
                                                <td><b>Total order :{{this.date}}</b></td>
                                                {{/each}}
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                               
                                                <td><b>Total Quantity:{{this.sum}}</b></td>
                                                <td><b>total Price:{{this.totalPrice}}</b></td>
                                            </tr>
  </tbody>
                </table>

            </div>
            <div class="tab-pane" id="tab-table2">
                <div class="month">
                    <form action="/admin/month-sales-report" method="post">
<div class="p-5">
<label for="start">Month :</label>

<input type="month" id="start" name="month"
       min="2018-03" value="2022-01">

       <div>
<button  class="btn btn-sm btn-primary" type="submit">View Report</button>
</div>

</div>

</form>
                </div>
              
                <table id="myTable2" class="table table-striped table-bordered bg-white" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                                                <th>No</th>
                                                <th>Date</th>
                                                <th>order</th>
                                                <th>Amount</th>
                        </tr>
                    </thead>
                     <tbody>
    {{#each monthSalesList}}
                                            <tr>
                                                <td><b>{{inc @index}}</b></td>
                                                <td>{{this._id}}</td>
                                                <td>{{this.count}}</td>
                                                <td>{{this.total}}</td>
                                            </tr>
                                            {{/each}}
                                             
                                                <tr>
                                                    {{#each countOrder }}
                                                <td><b>Total order :{{this.date}}</b></td>
                                                {{/each}}
                                                <td></td>
                                                <td><b>Total Quantity:{{this.quantity}}</b></td>
                                                
                                                
                                                <td><b>total Price:{{this.orderCount}}</b></td>
                                            </tr>
  </tbody>
                </table>
               
    
 
            </div>
        </div>

    </div>





    <script>
        $(document).ready(function () {
    $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
        $.fn.dataTable.tables({ visible: true, api: true }).columns.adjust();
    });
 
    $('table.table').DataTable({
        ajax: '../ajax/data/arrays.txt',
        scrollY: 200,
        scrollCollapse: true,
        paging: false,
    });
 
    // Apply a search to the second table for the demo
    $('#myTable2').DataTable().search('New York').draw();
});
    </script>


       


   

