

<div class="text-center mt-5 me-1"><h1>User Details</h1></div>
<div class="container ">
    <nav class="navbar clrww ">
  <div class="container-fluid mt-3 ">
    <form action="/admin/users-details" method="POST" class="d-flex" role="search">
      <input class="form-control me-2" value="{{usersFind.[0].Name}}" name="Name" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-dark" type="submit">Search</button>
    
    </form>
      
  
</nav>
</div>

<div class="container mt-1">
   <table class="table shadow p-3 mb-5 bg-body rounded p-3 align-middle text-center" >
  <thead class="clrww">
    <tr>
       <th scope="col">No</th>
       <th scope="col">Name</th>
       <th scope="col">Email ID</th>
       <th scope="col">Mobile</th>
       <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody class="clrwh">
  {{#if usersFind}}
   {{#each usersFind}}
    <tr>
      <td><b>{{inc @index}}</b></td>
      <td>{{this.Name}}</td>
      <td>{{this.Email}}</td>
      <td>{{this.Number}}</td>
      <td class="text-center">
  
      <a href="/admin/block-user/{{this._id}}/{{this.status}}"><button type="button" class="btn btn-outline-primary rounded-pill">
          {{#if this.status}}
          Block
          {{else}}
          unblock
          {{/if}}
          </button></a>
      
            
      </td>
    </tr>
   {{/each}}
  {{/if}}
   {{#each users}}
    <tr>
     <td><b>{{inc @index}}</b></td>
      <td>{{this.Name}}</td>
      <td>{{this.Email}}</td>
      <td>{{this.Number}}</td>
      <td class="text-center">
          <a href="/admin/block-user/{{this._id}}/{{this.status}}"><button type="button" class="btn btn-outline-primary rounded-pill">
          {{#if this.status}}
          Block
          {{else}}
          unblock
          {{/if}}
          </button></a>
         

        
      </td>
    </tr>
   {{/each}}
  </tbody>
</table>
</div>

{{#if addtoast}}
<div class="toast-container position-fixed mt-5 top-0 end-0 p-3">
    <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header bgmm">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                class="bi bi-check-circle-fill text-white" viewBox="0 0 16 16">
                <path
                    d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
            </svg>
            <strong class="me-auto text-white">&nbsp;USER ADDED</strong>
            <small class="text-white" >1 sec ago</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body bgmm2">
            User added successfully!.
        </div>
    </div>
</div>
{{/if}}

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" data-bs-dismiss="modal" class="btn btn-primary" id="delete_id_user">Save changes</button>
      </div>
    </div>
  </div>
</div>