<div class="container-fluid">
    <div class="row p-4 text-center">

    <div class="mt-2 d-flex  justify-content-center align-items-center">
  <div  class="logform col-md-4 p-5 shadow-sm border rounded-5 bg-white  border-warning">
    
    <h1 class="frmtitle text-center mb-4 ">Edit Product</h1>

    <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
       <div class="inputag text-start">
        <div class="form-floating p-2">
    <input type="text" name="ID" value="{{product.ID}}" class="form-control" id="floatingInputGroup1" placeholder="Product ID">
    <label for="floatingInputGroup1">Product ID</label>
  </div>


 <div class="form-floating p-2">
    <input type="text"  name="name"  value="{{product.name}}" class="form-control" id="floatingInputGroup1" placeholder="Product Name">
    <label for="floatingInputGroup1">Product Name</label>
  </div>


 <div class="form-floating p-2">
    <input type="text" name="price"  value="{{product.price}}" class="form-control" id="floatingInputGroup1" placeholder="Price">
    <label for="floatingInputGroup1">Price</label>
  </div>


 <div class="form-floating p-2">
    <input type="number" name="offer"  value="{{product.offer}}" class="form-control" id="floatingInputGroup1" placeholder="Price"  min="0" max="100" >
    <label for="floatingInputGroup1">Offer</label>
  </div>

<div class="form-floating p-2">
    <input type="text" name="stock"  value="{{product.stock}}" class="form-control" id="floatingInputGroup1" placeholder="Price">
    <label for="floatingInputGroup1">Stock</label>
  </div>
  



 <div class="form-floating p-2">
    <input type="text" name="description"  value="{{product.description}}" class="form-control" id="floatingInputGroup1" placeholder="Description">
    <label for="floatingInputGroup1">Description</label>
  </div>

 <div class="form-floating p-2">
    <input type="text" name="category"  value="{{product.category}}" class="form-control" id="floatingInputGroup1" placeholder="Description">
    <label for="floatingInputGroup1">Category</label>
  </div>

 

     <div class="form-group">
         <label>Choose Image File</label>
             <br>
<img src="/product-images/{{product.image.[0]}}" alt="" style="width: 100px; height: auto;" id="imgview1">
   <img src="/product-images/{{product.image.[1]}}" alt="" style="width: 100px; height: auto;" id="imgview2">
     <img src="/product-images/{{product.image.[2]}}" alt="" style="width: 100px; height: auto;" id="imgview3">
        <img src="/product-images/{{product.image.[3]}}" alt="" style="width: 100px; height: auto;" id="imgview4">
                    <br>
              <input multiple type="file" id="product_images[]" accept="image/*r" onchange="viewImg(event)" name="image" class="form-control" >
              </div>
</div>

<button type="submit"  class="btn btn-primary">Update</button>

</form>
 </div>
</div>
    </div>
</div>


<script>
      function viewImg(event){
        document.getElementById('imgview1').src=URL.createObjectURL(event.target.files[0])
        document.getElementById('imgview2').src=URL.createObjectURL(event.target.files[0])
        document.getElementById('imgview3').src=URL.createObjectURL(event.target.files[0])
        document.getElementById('imgview4').src=URL.createObjectURL(event.target.files[0])
    }
</script>